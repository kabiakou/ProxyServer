{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "rootDir": "./",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": [
        "js/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}